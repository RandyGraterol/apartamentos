<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuarios</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="/css/stylesForm/stylesForm.css">
</head>
<body>
    <div class="container">
        <h1>Actualizar registro</h1>
        <form action="/updateUsuarioPost/<%=users.id%>" method="POST" class="formulario" enctype="multipart/form-data">
            <div class="inputD">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" required value='<%=users.nombre%>'>
            </div>
            <div class="inputD">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required value='<%=users.email%>'>
            </div>
            <div class="inputD">
                <label for="telefono">Teléfono</label>
                <input type="tel" id="telefono" name="telefono" required value='<%=users.telefono%>'>
            </div>
            <div class="inputD">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required value='<%=users.password%>'>
            </div>
            <div class="inputD">
                <label for="imgPerfil">Imagen de Perfil</label>
                <input type="file" id="imgPerfil" name="imgPerfil" placeholder="/img/default.png" required>
            </div>
            <div class="inputD">
                <label>Apartamento asignado</label>
                <select name="apartamentoId" id="apartamentoId" required>
                    <% data.forEach(apartamento=>{ %>
                    <option value="<%=apartamento.id%>"><%=apartamento.apartamento%></option>
                    <% }); %>
                </select>
            </div>
            <div class="inputD">
                <label for="deudaActual">Deuda Actual</label>
                <input type="number" id="deudaActual" name="deudaActual" value='<%=users.deudaActual%>'>
            </div>
            <div class="inputD">
                <label for="deudaPendiente">Deuda Pendiente</label>
                <input type="number" id="deudaPendiente" name="deudaPendiente" value='<%=users.deudaPendiente%>'>
            </div>
            <button type="submit">Actualizar</button>
        </form>
    </div>
</body>
</html>
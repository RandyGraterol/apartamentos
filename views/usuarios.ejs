<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TransiTrack - Sistema de Control de Rutas</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <header class="bg-dark text-white text-center py-3">
        <h1>Panel de Administrador</h1>
    </header>

    <div class="container-fluid">
        <div class="row">
          <%-include('nav')-%>
        <main class="col-md-10 p-4">
            <%- include('dashboarGeneral') -%>

            <h2>Listado de Usuarios</h2>
            <div class="containerTable">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Contraseña</th>
                        <th>Perfil</th>
                        <th>Apartamento</th>
                        <th>D. Actual</th>
                        <th>D. Pendiente</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="usuarioTableBody">
                    <!-- Los usuarios se agregarán dinámicamente aquí -->
                    <% users.forEach(user=>{ %>
                    <tr>
                        <td><%=user.nombre%></td>
                        <td><%=user.email%></td>
                        <td><%=user.telefono%></td>

                        <td><%=user.password%></td>
                        <td><%=user.imgPerfil%></td>
                        <td><%=user.apartamentoId%></td>
                        <td><%=user.deudaActual%></td>
                        <td><%=user.deudaPendiente%></td>
                        <td>
                             <a href="/updateUsuarioGet/<%=user.id%>"><img class="imgOpcion" src="/icon/arrow.png" alt=""></a>

                              <a href="/deleteUsuario/<%=user.id%>">
                                <img class="imgOpcion" src="/icon/trash.png" alt=""></a>
                        </td>
                    </tr>
                    <% }); %>
                </td>
            </tr>

        </tbody>
    </table>
    </div>
    <!-- Formulario para Agregar Usuario -->
    <h2>Agregar Usuario</h2>

    <div class="card mb-3" id="reporte">
        <form action="/crearUsuarioPost" method="POST" enctype="multipart/form-data">
            <div class="inputD">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="inputD">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="inputD">
                <label for="telefono">Teléfono</label>
                <input type="tel" id="telefono" name="telefono" required>
            </div>
            <div class="inputD">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="inputD">
                <label for="imgPerfil">Imagen de Perfil</label>
                <input type="file" id="imgPerfil" name="imgPerfil" placeholder="/img/default.png" required>
            </div>
            <div class="inputD">
                <label>Apartamento asignado</label>
                <select name="apartamentoId" id="apartamentoId" required>
                    <% data.forEach(apartamento=>{ %>
                    <option value="<%=apartamento.id%>"><%=apartamento.apartamento%></option>
                    <% }); %>
                </select>
            </div>
            <div class="inputD">
                <label for="deudaActual">Deuda Actual</label>
                <input type="number" id="deudaActual" name="deudaActual" placeholder="0">
            </div>
            <div class="inputD">
                <label for="deudaPendiente">Deuda Pendiente</label>
                <input type="number" id="deudaPendiente" name="deudaPendiente" placeholder="0">
            </div>
            <button class="btn btn-primary">Agregar Usuario</button>
        </form>
    </div>
</main>
</div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
<script src="js/panel.js"></script>
<script src="js/usuarios.js"></script>
</body>
</html>
